<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<% if user_signed_in? %>
  <% if current_user.id == @restaurant.user.id %>
  <%= button_to "delete",
      {controller: :restaurants, action: :destroy, id: @restaurant.id},
      form: {id: "delete"},
      method: :delete %>
  <%end%>
<% end %>

<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.description %></h2>
<h2><%= @restaurant.blurb %></h2>

<% if user_signed_in? %>
  <% if current_user.id == @restaurant.user.id %>
  <%= button_to "edit",
    {controller: :restaurants, action: :edit, id: @restaurant.id},
    form: {id: "modify"},
    method: :get %>
  <% end %>
<% end %>

<h3>Reviews</h3>
<p> Average Rating: </p> <div id="average-rating"> <%= @reviews.average(:rating) %> </div>
<% if @reviews.length == 0%>
  <p>Sorry, no reviews yet! Be the first to submit a review.</p>
<% else %>
  <% @reviews.each_with_index do |review, index| %>
    <h4><%= index + 1 %>) Author: <%= review.user.email %> Score: <%= review.rating %>  |  Comment: <%= review.comment %></h4>
  <% end %>
<% end %>

<% if user_signed_in? %>
  <% if current_user.id != @restaurant.user.id %>
    <%= render "review/new" %>
  <% else %>
    <p>Please sign in to leave a review</p>
  <% end %>
<% end%>


<a href="javascript:window.location.href=window.location.href">Show location on map</a> <br>
<a href="/restaurants/">Go back to list of restaurants</a>



<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type='text/javascript'>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
