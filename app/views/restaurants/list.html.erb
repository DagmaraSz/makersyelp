<h1>Restaurants list</h1>

<div class="restaurant-list">
  <ul id ='restaurants'>
 <% @restaurants.each do |restaurant| %>
 <li>
   Name: <a id="<%= restaurant.id %>" href="/restaurants/view/<%= restaurant.id %>">  <%= restaurant.name %>  </a><br>
   Description: <%= restaurant.description %> <br>
   Blurb: <%= restaurant.blurb %> <br>
   Postcode: <%= restaurant.postcode %> <br>
 </li>
 <% end %>
</ul>
<%= button_to "New Restaurant", '/restaurants/new', method: :get %>
</div>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type='text/javascript'>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
