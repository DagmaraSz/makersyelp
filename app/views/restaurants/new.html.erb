<%= form_for @restaurant, url: {action: "create"}, html: {class: "new_restaurant"} do |f| %>
  <%= f.text_field :name, placeholder: "Felix's Firey Fish Fingers" %>
  <%= f.text_field :blurb, placeholder: "An amazingly arduous amorphous adventure" %>
  <%= f.text_area :description, size: "60x12", placeholder: "It's one of the best, the food is so fiery, the food is so great." %>
  <%= f.text_field :postcode, placeholder: "BH121BW" %>
  <%= f.submit "Add Restaurant" %>
<% end %>
