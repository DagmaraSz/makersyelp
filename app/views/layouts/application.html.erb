<!DOCTYPE html>
<html>
<head>
  <title>Makersyelp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if user_signed_in? %>
    <%= button_to "Sign out", destroy_user_session_path, id: "sign_out", class: "user_auth", method: :delete %>
  <% else %>
    <%= button_to "Sign up", new_user_registration_path, id: "sign_up", class: "user_auth", method: :get %>
    <%= button_to "Sign in", new_user_session_path, id: "sign_in", class: "user_auth", method: :get %>
  <% end %>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
<%= yield %>

</body>
</html>
